@model Notes.Models.Note

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Note</h4>
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID"/>
        <div class="form-group">
            <label asp-for="CreationDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CreationDate" type="datetime-local" class="form-control input-lg"/>
                <span asp-validation-for="CreationDate" class="text-danger" />
            </div>
        </div>
        <div hidden class="form-group">
            <label asp-for="UserId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="UserId" class="form-control" value=@ViewData["UserId"] />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FinishDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FinishDate" type="datetime-local" class="form-control input-lg"/>
                <span asp-validation-for="FinishDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <label asp-for="Finished"><input asp-for="Finished" />@Html.DisplayNameFor(model => model.Finished)</label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NoteText" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea rows="4" cols="50" class="form-control" asp-for="NoteText"></textarea>
                <span asp-validation-for="NoteText" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PriorityEnum" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PriorityEnum" type="text" id="importanceInput" class="rating" data-size="lg"/>
                <span asp-validation-for="PriorityEnum" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control"/>
                <span asp-validation-for="Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script type="text/javascript">
        $('#importanceInput').rating({ 'step': 1, 'showCaption': false, 'showClear': false });
    </script>
}